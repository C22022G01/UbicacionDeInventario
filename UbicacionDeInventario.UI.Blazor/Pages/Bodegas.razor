@page "/Bodega"
@using UbicacionDeInventario.EntidadesDeNegocio
@using UbicacionDeInventario.UI.Blazor.MVC
@inject HttpClient Http

<PageTitle>Bodegas</PageTitle>

<h1>Tabla Bodega</h1>


@if (bodegas == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdSucursal</th>
                <th>Nombre</th>
                <th>Estatus</th>
                <th>Descripcion</th>
               @* <th>Acciones</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var bodega in bodegas)
            {
                <tr>
                    <td>@bodega.Nombre</td>                   
                    <td>Modificar</td>
                    <td>Eliminar</td>
                    <td>ver</td>
                </tr>
            }
        </tbody>
    </table>
}
@code {
     private Bodega[]? bodegas;

    protected override async Task OnInitializedAsync()
    {
        //https://localhost:44396/api/Bodega
        bodegas = await Http.GetFromJsonAsync<Bodega[]>("Bodega");
    }

}
 